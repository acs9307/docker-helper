# Copy to .env and edit values; all variables are optional unless noted.

# Scanner cadence (seconds) and severity filter
# SCAN_INTERVAL_SECONDS=86400
# TRIVY_SEVERITY=HIGH,CRITICAL

# Optional Trivy flags
# TRIVY_EXTRA_ARGS=--ignore-unfixed

# Snapshot/whitelist settings
# SNAPSHOT_WRITE=0               # set to 1 to write/update snapshot after scan
# SNAPSHOT_DIR=/snapshots

# SMTP settings for email alerts (set here or via secrets files)
# SMTP_HOST=smtp.example.com          # required to send mail
# SMTP_PORT=587
# SMTP_USER=scanner
# SMTP_PASS=changeme
# SMTP_FROM=scanner@example.com
# SMTP_TO=admin@example.com           # required to send mail
# SMTP_TLS=true
# SMTP_STARTTLS=true
# SMTP_SUBJECT_PREFIX=[Image Scanner]
